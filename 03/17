 QKD\nnetworks.\n","versions":[{"version":"v1","created":"Mon, 16 Mar 2015 18:47:25 GMT"},{"version":"v2","created":"Thu, 29 Oct 2015 06:10:34 GMT"}],"update_date":"2015-10-30"}

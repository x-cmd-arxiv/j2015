mendations\ndeveloped.\n","versions":[{"version":"v1","created":"Mon, 19 Oct 2015 16:04:31 GMT"},{"version":"v2","created":"Thu, 22 Oct 2015 08:38:25 GMT"},{"version":"v3","created":"Fri, 6 Nov 2015 08:34:03 GMT"}],"update_date":"2015-11-18"}

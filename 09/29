ale parallel\nsuperconducting nanolayers.\n","versions":[{"version":"v1","created":"Mon, 28 Sep 2015 21:45:22 GMT"},{"version":"v2","created":"Mon, 25 Jan 2016 14:57:20 GMT"}],"update_date":"2016-03-02"}

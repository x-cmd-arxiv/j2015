ng distributed energy resources.\n","versions":[{"version":"v1","created":"Wed, 22 Apr 2015 18:37:54 GMT"},{"version":"v2","created":"Mon, 1 Jun 2015 19:00:45 GMT"}],"update_date":"2015-06-02"}

y constant $c$.\n","versions":[{"version":"v1","created":"Sat, 11 Jul 2015 00:46:12 GMT"},{"version":"v2","created":"Thu, 20 Aug 2015 11:12:05 GMT"},{"version":"v3","created":"Tue, 22 Sep 2015 17:25:30 GMT"},{"version":"v4","created":"Wed, 21 Sep 2016 16:01:32 GMT"},{"version":"v5","created":"Thu, 29 Dec 2016 11:32:46 GMT"},{"version":"v6","created":"Tue, 24 Jan 2017 14:54:36 GMT"}],"update_date":"2017-01-25"}

y symmetric shape.\n","versions":[{"version":"v1","created":"Mon, 7 Sep 2015 05:02:15 GMT"},{"version":"v2","created":"Sun, 20 Dec 2015 08:45:49 GMT"}],"update_date":"2016-01-20"}

sumably or normatively directed.\n","versions":[{"version":"v1","created":"Tue, 28 Apr 2015 10:59:51 GMT"},{"version":"v2","created":"Wed, 29 Apr 2015 23:34:43 GMT"},{"version":"v3","created":"Mon, 25 May 2015 19:55:31 GMT"},{"version":"v4","created":"Sat, 13 Jun 2015 23:15:08 GMT"},{"version":"v5","created":"Sun, 23 Aug 2015 09:01:41 GMT"}],"update_date":"2016-02-12"}
